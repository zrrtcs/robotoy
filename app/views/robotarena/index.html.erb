<h1 id="title">RobotFair√©!</h1>

<div id="arena-container">
	
	<table id="arena">
		<% 5.times do |y| %>
		<tr class="y<%=y%>">
			<% 5.times do |x| %>
			<td class="box x<%=x%>">
				<%if (x==@tb.pos_x && y==@tb.pos_y)%>
					<div class="robot">
						<%= image_tag "aibo-g2.png", class: "robot-img" %>
					</div>
				<%end%>
			</td>
			<% end %>
		</tr>	
		<% end %>
	</table>

	<textarea name="" id="robocode" cols="30" rows="10">
		<%= @tb %>
	</textarea>

</div>
<div id="cheatsheet">
	
</div>
